{
    persist_config off
    http_port {$HTTP_PORT}
    https_port {$HTTPS_PORT}
}

http:// {
    root * /opt/app/public
    log {
        output discard
    }

	header * ?X-Request-Id "{http.request.uuid}"

    php_fastcgi 127.0.0.1:{$FPM_PORT} {
        trusted_proxies private_ranges
        env X_REQUEST_ID "{http.request.uuid}"
    }
}
