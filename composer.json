{
    "name": "arabcoders/watchstate",
    "description": "Self-hosted service to sync your plex, jellyfin and emby play state. without relying on 3rd-party external services.",
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "platform-check": true,
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "allow-plugins": {
            "carthage-software/mago": true
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "tests": "vendor/bin/phpunit",
        "format": "vendor/bin/mago format",
        "format:ci": "vendor/bin/mago format --check",
        "test:all": "php -d display_errors=1 -d display_startup_errors=1 -d error_reporting=E_ALL vendor/bin/phpunit",
        "test:coverage": [
            "mkdir -p var/coverage",
            "php -d zend_extension=xdebug -d xdebug.mode=coverage -d xdebug.start_with_request=no vendor/bin/phpunit --coverage-filter src/ --coverage-clover var/coverage/clover.xml --coverage-xml var/coverage/xml --coverage-text",
            "echo 'Coverage reports generated in ./var/coverage/'"
        ],
        "lint": "vendor/bin/mago lint",
        "frontend:update": "pnpm up --dir ./frontend --latest",
        "frontend:gen": "pnpm run --dir ./frontend generate",
        "frontend:dev": "pnpm run --dir ./frontend dev",
        "frontend:tc": "pnpm run --dir ./frontend typecheck",
        "frontend:prepare": "pnpm run --dir ./frontend prepare --envName=development"
    },
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-mbstring": "*",
        "ext-ctype": "*",
        "ext-curl": "*",
        "ext-sodium": "*",
        "ext-simplexml": "*",
        "ext-fileinfo": "*",
        "ext-redis": "*",
        "ext-posix": "*",
        "ext-openssl": "*",
        "ext-zip": "*",
        "psr/http-client": "^1.0.3",
        "psr/simple-cache": "^3.0",
        "psr/http-server-middleware": "^1.0.2",
        "monolog/monolog": "^3.8.1",
        "symfony/console": "^7.2.1",
        "symfony/cache": "^7.2.1",
        "symfony/yaml": "^7.2",
        "symfony/process": "^7.2",
        "symfony/http-client": "^7.2.1",
        "symfony/lock": "^7.2",
        "symfony/event-dispatcher": "^7.2",
        "league/container": "^4.2.4",
        "league/route": "^6.2.0",
        "nyholm/psr7": "^1.8.2",
        "nyholm/psr7-server": "^1.1.0",
        "dragonmantank/cron-expression": "^3.4.0",
        "halaxa/json-machine": "^1.2.0",
        "ramsey/uuid": "^4.7.6",
        "perftools/php-profiler": "^1.1.2",
        "firebase/php-jwt": "^7.0"
    },
    "suggest": {
        "ext-sockets": "For UDP communications."
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "symfony/var-dumper": "^7.2",
        "phpunit/phpunit": "^11.5.2",
        "carthage-software/mago": "^1.3.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests"
        }
    },
    "autoload": {
        "files": [
            "src/Libs/helpers.php",
            "src/Libs/Utils.php"
        ],
        "psr-4": {
            "App\\": "src/"
        }
    },
    "replace": {
        "symfony/polyfill-php54": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*",
        "symfony/polyfill-php84": "*",
        "symfony/polyfill-php85": "*",
        "symfony/polyfill-php86": "*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-intl-grapheme": "*"
    }
}
